{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../database"
    },
    {
      "path": "../../common/error"
    }
  ],
  "include": ["./src/**/*", "./test/**/*"]
}
