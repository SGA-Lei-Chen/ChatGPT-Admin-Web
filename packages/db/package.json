{
  "name": "@achat/db",
  "type": "module",
  "exports": {
    "./schema": {
      "import": {
        "types": "./dist/schema.d.ts",
        "default": "./dist/schema.js"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "ts-map": "tsc --rootDir ./src --emitDeclarationOnly",
    "dev": "bunchee -w --success \"npm run ts-map\"",
    "build": "bunchee && npm run asset",
    "push": "drizzle-kit push",
    "migrate": "tsx migrate.ts",
    "generate": "drizzle-kit generate",
    "seed": "tsx seed.ts",
    "auth:generate": "npx @better-auth/cli generate --config ../server/src/lib/auth.ts"
  },
  "dependencies": {
    "drizzle-orm": "*",
    "drizzle-zod": "*",
    "handlebars": "*",
    "oslo": "^1.2.1",
    "uuid": "*",
    "zod": "*"
  },
  "devDependencies": {
    "@achat/tsconfig": "workspace:*",
    "@biomejs/biome": "1.9.4",
    "@types/node": "*",
    "@types/pg": "*",
    "@types/uuid": "*",
    "dotenv": "^16.4.7",
    "drizzle-kit": "*",
    "drizzle-seed": "^0.3.1",
    "esbuild": "*",
    "pg": "*",
    "prompt-sync": "^4.2.0",
    "tsx": "*",
    "typescript": "*"
  }
}