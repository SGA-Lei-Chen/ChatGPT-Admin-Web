{
  "name": "@achat/email",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./template": {
      "import": {
        "types": "./dist/template.d.ts",
        "default": "./dist/template.js"
      },
      "require": {
        "types": "./dist/template.d.cts",
        "default": "./dist/template.cjs"
      }
    }
  },
  "scripts": {
    "dev": "bunchee -w",
    "build": "bunchee",
    "email:build": "email build",
    "email:dev": "email dev --dir ./src/template --port 3002",
    "export": "email export --dir ./src/template"
  },
  "dependencies": {
    "@react-email/components": "0.0.25",
    "@react-email/render": "1.0.1",
    "@types/nodemailer": "^6.4.17",
    "nodemailer": "^6.10.1",
    "react": "*",
    "react-dom": "*",
    "react-email": "3.0.1",
    "resend": "^4.1.2",
    "zod": "*"
  },
  "devDependencies": {
    "@achat/tsconfig": "workspace:*",
    "@types/react": "*",
    "@types/react-dom": "*"
  }
}
